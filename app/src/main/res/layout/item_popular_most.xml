<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_190sdp"
        android:layout_height="@dimen/_175sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/back_rounded"
        android:elevation="@dimen/_3sdp"
        android:translationZ="@dimen/_5sdp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_popular_most"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:adjustViewBounds="false"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/white"
            android:src="@drawable/iv_test_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@color/white"
            app:shapeAppearanceOverlay="@style/rounded_corners"/>

        <TextView
            android:id="@+id/tv_namePopular_most"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="@string/name_fast_food"
            android:textAlignment="textStart"
            android:textColor="#302A3A"
            android:textSize="@dimen/_17sdp"
            app:layout_constraintBottom_toTopOf="@+id/tv_descriptionPopular_most"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_popular_most"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_descriptionPopular_most"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_1sdp"
            android:text="CafÃ© - Western Food"
            android:textAlignment="textStart"
            android:textColor="#65616D"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_namePopular_most"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_ratingsPopular_most"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="4.9"
            android:textColor="#E76C45"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_startPopular_most"
            app:layout_constraintStart_toEndOf="@+id/iv_startPopular_most"
            app:layout_constraintTop_toTopOf="@+id/iv_startPopular_most"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/iv_startPopular_most"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_star"
            app:layout_constraintBottom_toBottomOf="@+id/tv_descriptionPopular_most"
            app:layout_constraintStart_toEndOf="@+id/tv_descriptionPopular_most"
            app:layout_constraintTop_toTopOf="@+id/tv_descriptionPopular_most"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
