<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_welcome_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:paddingHorizontal="@dimen/_60sdp"
            android:src="@drawable/iv_find_food"
            app:layout_constraintBottom_toTopOf="@+id/iv_slider_welcome_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_slider_welcome_item"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_margin="@dimen/_20sdp"
            android:src="@drawable/ic_slider_indicators1"
            app:layout_constraintBottom_toTopOf="@+id/tv_Main_welcome_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_welcome_item"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_Main_welcome_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/cabin_bold"
            android:text="@string/find_food_you_love"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/_25sdp"
            app:layout_constraintBottom_toTopOf="@+id/tv_description_welcome_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_slider_welcome_item" />

        <TextView
            android:id="@+id/tv_description_welcome_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="center_horizontal"
            android:lineHeight="@dimen/_15sdp"
            android:paddingHorizontal="@dimen/_30sdp"
            android:text="@string/description_find_food_you_love"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_Main_welcome_item"
            tools:targetApi="p" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>